@{
    ViewData["Title"] = "Customer Information From";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-4">
            <fieldset>
                <legend>Customers</legend>
                <div class="d-flex flex-column">
                    <button type="button" class="btn btn-light text-start mt-1 mb-1" style="border-radius:revert; border-color:#7697d3; color:#727272; background-color:white; font-weight:400">John Kabir</button>
                    <button type="button" class="btn btn-light text-start mt-1 mb-1" style="border-radius:revert; border-color:#7697d3; color:#727272; background-color:white; font-weight:400">Another Name</button>
                </div>
            </fieldset>
             
        </div>
        <div class="col-8">
            <fieldset>
                <legend></legend>
                <fieldset style="margin:revert; margin-left:-5px; margin-top:10px;">
                    <legend>Actions</legend>
                    <div>
                        <button type="button" class="btn btn-primary">Edit</button>
                        <button type="button" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-primary">Delete</button>
                        <button type="button" class="btn btn-primary">Cancle</button>
                    </div>
                </fieldset>

                <fieldset style="margin:revert; margin-left:-5px; margin-top:10px;">
                    <legend>Basic Information</legend>

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">NAME:</label>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control"  placeholder="Enter Name Text" style="background-color:white; border-radius:revert; border-color:#4673c8; color:#4673c8;" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">FATHER NAME:</label>
                            </div>
                        </div>  
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">MOTHER NAME:</label>
                            </div>
                        </div>  
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">MARITAL STATUS:</label>
                            </div>
                        </div>  
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">COUNTRY:</label>
                            </div>
                        </div>  
                        <div class="row">
                            <div class="col">
                                <label style="margin:2px; color:#4673c8;">PHOTO:</label>
                            </div>
                        </div>  
                    </div>
                </fieldset>

            </fieldset>
        </div>
    </div>
</div>